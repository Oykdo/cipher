{
  "name": "@pulse/bridge",
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate:encrypt": "node --import tsx src/db/migrate-to-encrypted.js",
    "db:check-encryption": "node -e \"import { existsSync } from 'fs'; import { join } from 'path'; const keyPath = join(process.env.BRIDGE_DATA_DIR || './data', '.db.key'); console.log(existsSync(keyPath) ? '✅ Database is encrypted' : '❌ Database is NOT encrypted');\"",
    "db:clear": "node scripts/clear-database.cjs",
    "db:migrate": "node scripts/migrate-conversation-requests.js"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.0",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/rate-limit": "^10.0.1",
    "@fastify/static": "^8.3.0",
    "@types/pg": "^8.15.6",
    "argon2": "^0.41.1",
    "axios": "^1.7.7",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "kysely": "^0.27.4",
    "pg": "^8.16.3",
    "secure-remote-password": "^0.3.1",
    "socket.io": "^4.8.1",
    "stripe": "^20.0.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bip39": "^3.0.0",
    "@types/node": "^22.9.0",
    "@types/ws": "^8.5.12",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14"
  }
}
